<Window x:Class="TutorTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TutorTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="193*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FFE7FABF"></Rectangle>
        <Image Source="/Images/school_logo.png" Margin="0 0 100 0" HorizontalAlignment="Center"/>
        <TextBlock Margin="70 0 0 0" FontSize ="27" Foreground="#FF04A0FF" FontFamily="Comic Sans MS" HorizontalAlignment="Center">TutorPro</TextBlock>
        <Frame x:Name="MainFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
