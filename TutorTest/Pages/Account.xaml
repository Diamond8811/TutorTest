<Page x:Class="TutorTest.Pages.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TutorTest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Account"
      Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Images/school_logo.png" Width="100" Height="85" VerticalAlignment="Center" Grid.Row="0"/>
        <TextBlock x:Name="loginTb" Width="200" Height="50" VerticalAlignment="Top" Foreground="Black" Grid.Row="1" Text="{Binding Login}"/>
        <TextBlock x:Name="PasswordTb" Width="200" Height="50" VerticalAlignment="Top" Foreground="Black" Grid.Row="2" Text="{Binding Password}"/>
    </Grid>
</Page>
