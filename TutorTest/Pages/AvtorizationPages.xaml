<Page x:Class="TutorTest.Pages.AvtorizationPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TutorTest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AvtorizationPages"
      Background="White">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock>Логин</TextBlock>
                <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="LoginTb"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock>Пароль</TextBlock>
                <TextBox HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="PasswordTb"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="Loginbtn" Click="Loginbtn_Click">Вход</Button>
                <Button x:Name="RegistrationBtn">Регистрация</Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
