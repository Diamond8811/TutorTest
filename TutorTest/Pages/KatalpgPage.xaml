<Page x:Class="TutorTest.Pages.KatalpgPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TutorTest.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KatalpgPage">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <!-- Список карточек -->
            <ItemsControl x:Name="ServicesItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- Карточки располагаются горизонтально и переносятся на новую строку -->
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- Квадратная карточка размером 250x250 -->
                        <Border Width="250" Height="250" Margin="10" Padding="10"
                                BorderBrush="LightGray" BorderThickness="1" CornerRadius="10"
                                Background="White">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <CheckBox x:Name="PriceCb" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" IsChecked="False"/>
                                <Image Grid.Row="0" Width="50" Height="50" Source="/Images/school_logo.png"></Image>
                                <!-- Название услуги -->
                                <TextBlock Grid.Row="1" Text="{Binding Title}" 
                                           FontWeight="Bold" FontSize="16" 
                                           TextWrapping="Wrap" TextAlignment="Center"/>

                                <!-- Цена (формат валюты) -->
                                <TextBlock Grid.Row="2" Text="{Binding Cost, StringFormat={}{0:C}}" 
                                           Foreground="Green" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Margin="0,5,0,5"/>

                                <!-- Длительность (используем свойство DurationText) -->
                                <TextBlock Grid.Row="3" Text="{Binding DurationText}" 
                                           HorizontalAlignment="Center" Foreground="Gray"/>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Grid Background="#cbd3fb" Height="40" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <TextBlock HorizontalAlignment="Left" Margin="10" Grid.Column="0" Foreground="Black" Text="К оплате: "/>
                <TextBlock x:Name="TotalCheckTb" Margin="0 10 10 10" Grid.Column="0" Foreground="Black" Text="{Binding IsSelected}"/>
            </StackPanel>
            <Button Grid.Column="1" BorderBrush="Black" Background="Green" BorderThickness="1" x:Name="ToBuyButton" HorizontalAlignment="Right" Margin="0 0 25 0" VerticalAlignment="Center" Height="35" Content="Оплатить всё"/>
        </Grid>
    </Grid>
</Page>
